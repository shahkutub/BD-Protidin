<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgFvrt"
        android:layout_width="@dimen/default_imagew"
        android:layout_height="@dimen/default_imageh"
        android:layout_below="@+id/topWhite"
        android:src="@drawable/defaulticon"
        android:scaleType="fitXY"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgFvrt"
        android:layout_alignBottom="@+id/imgFvrt"
        android:layout_alignTop="@+id/imgFvrt"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dim10"
        >

    <TextView
        android:id="@+id/fvrtTxtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center_vertical"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fvrtTxtTitle"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateFvrt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fvrtCategory"
                android:layout_marginLeft="5sp"
                android:textColor="#bfc9ca"
                android:text=""
                android:textSize="10sp" />


            <View
                android:layout_width="2px"
                android:layout_height="10dp"
                android:background="@color/homTop"
                android:layout_marginLeft="5dp"
                ></View>

            <TextView
                android:id="@+id/fvrtCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_vertical"
                android:textColor="#0089CF"
                android:textSize="16sp" />

        </LinearLayout>



    </RelativeLayout>
    <ImageView
        android:id="@+id/fvrtBtn"
        android:layout_width="@dimen/dim20"
        android:layout_height="@dimen/dim20"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/dim07"
        android:layout_marginTop="@dimen/dim07"
        android:src="@drawable/fav_off"
        />

</RelativeLayout>